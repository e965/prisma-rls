{
  "name": "prisma-rls",
  "version": "0.5.5",
  "type": "module",
  "description": "Prisma client extension for row-level security on any database",
  "license": "MIT",
  "keywords": [
    "database",
    "prisma",
    "prisma-client",
    "prisma-extension",
    "rls",
    "row-level-security"
  ],
  "author": "s1owjke",
  "homepage": "https://github.com/s1owjke/prisma-rls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "~24.13.0"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc --watch",
    "lint": "biome check",
    "lint:ci": "biome ci --reporter=github",
    "lint:fix": "biome check --write",
    "typecheck": "tsc --noEmit",
    "test": "node --env-file .env ./node_modules/.bin/vitest run",
    "test:watch": "node --env-file .env ./node_modules/.bin/vitest watch",
    "prisma:generate": "prisma generate && biome check --write ./tests/fixtures/dmmf.ts",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:db:seed": "prisma db seed"
  },
  "peerDependencies": {
    "@prisma/client": ">=7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@prisma/generator-helper": "^7.3.0",
    "@types/node": "^25.2.2",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
