    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2023"],
    "module": "Node16",
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2023"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
